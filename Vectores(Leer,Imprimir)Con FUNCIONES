#include "stdafx.h"

void cargar(int v[],int n)
{
	int x;
	for (int i=0;i<n;i++)
	{
		printf("Elemento: ");
		scanf("%i",&x);
		v[i]=x;
	}
}
void mostrar(int v[],int n)
{
	for (int i=0;i<n;i++)
	{
		printf("%i ",v[i]);
	}
}
int main()
{
	int v[50];
	int n;

	printf("Introduzca la cantidad de elementos del vector: ");
	scanf("%i",&n);
	
	cargar(v,n);
	mostrar(v,n);
	
	return 0;
}

