float leer();
float porcentaje(float x,float total);


void main()
{float resA ,resB ,resC,a, b, c,t;
 a=leer();
 b=leer();
 c=leer();
 total=a+b+c;
 resA=porcentaje(a,t);
 resB=porcentaje(b,t);
 resC=porcentaje(c,t);
 printf("\n100 porciento = %g\n",t);
 printf("Primer valor = %g porciento\n",resA);
 printf("Segundo valor = %g porciento\n",resB);
