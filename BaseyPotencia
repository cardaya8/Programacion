#include "stdafx.h"
#include "stdio.h"
#include "stdlib.h"
#include "conio.h"

void main ()
{
	int N,  S, c, X, D;
	system ("color 70");
do
{
	printf("Ingrese La potencia : ");
	scanf ("%d",&N);
	
}while (N<=0);
	printf("\n\nIngrese La base como numero : ");
	scanf ("%d",&X);
S=0;
c=1;
D=1;
printf("        c        D        S \n\n ");
while(c<=N)
{
	D = D * X;
	S = S + D;
	printf("%8d   %8d   %8d\n ",c,D,S);
	c=c+1;
}
printf("\n\n La Serie suma de %d  \n\n ", S);
system ("pause");
}
