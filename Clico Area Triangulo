#include "stdafx.h"
#include "conio.h"
#include "stdlib.h"
#include "stdio.h"


void main ()
{
	int Base, Altura ;
	float B1 , Resultado;
	printf ("\n\n Ingrese el Base:  ");
	scanf ("%d",&Base);
	printf ("\n\n Ingrese Altura:  ");
	scanf ("%d",&Altura);
while ((Base <= 0) | (Altura <= 0))
{
	printf ("\n\n ERROR Ingrese Base:  ");
	scanf ("%d",&Base);
	printf ("\n\n ERROR Ingrese Altura:  ");
	scanf ("%d",&Altura);
}
B1=Base;
Resultado = Base * Altura / 2;
printf("\n\n El doble es %f \n\n ",Resultado);

system ("pause");
}
